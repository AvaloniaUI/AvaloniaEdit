        xmlns:local="clr-namespace:AvaloniaEdit.Search;assembly=AvaloniaEdit">

    <Style Selector="local|DropDownButton">
        <Style.Resources>
            <SolidColorBrush x:Key="ActiveBorder"
                             Color="#FF0A246A" />
            <SolidColorBrush x:Key="ActiveBackground"
                             Color="#FFB6BDD2" />
        </Style.Resources>
        <Setter Property="Padding"
                Value="2,2,2,2" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="BorderBrush"
                Value="Transparent" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            Name="OuterBorder">
                        <StackPanel Orientation="Horizontal">
                            <ContentPresenter Margin="{TemplateBinding Padding}" />
                            <Path Margin="0,2,2,2"
                                  Data="M0,0 L1,0 0.5,1 z"
                                  Fill="{TemplateBinding TextBlock.Foreground}"
                                  Width="7"
                                  Height="3.5"
                                  Stretch="Fill" />
                        </StackPanel>
                    </Border>
